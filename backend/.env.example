# Claude Repo Chat - Environment Configuration

# Claude API
ANTHROPIC_API_KEY=your_api_key_here

# Application
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# Security
SECRET_KEY=generate_secure_random_key_here
ALLOWED_ORIGINS=http://localhost:3000,https://robert.westover.services,https://workspace.westover.services

# Repository Configuration
REPOS_BASE_DIR=/tmp/repos
KEYS_DIR=/opt/claude-repo-chat/keys
MAX_REPO_SIZE_MB=1000
SESSION_TIMEOUT_MINUTES=60

# Cloudflare Access (JWT validation)
CLOUDFLARE_TEAM_DOMAIN=your-team.cloudflareaccess.com
CLOUDFLARE_AUD=your_aud_tag_here

# Knowledge Service (TBD)
# KNOWLEDGE_SERVICE_URL=http://localhost:9000
# KNOWLEDGE_SERVICE_TYPE=mcp|vector|graph

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Terminal (for workspace use case)
ENABLE_TERMINAL=false
TERMINAL_SHELL=/bin/bash
